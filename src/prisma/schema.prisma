generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ReservationStatus {
  cancel
  done
  queue
}

enum UserStatus {
  staff
  member
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @db.VarChar(50)
  email        String        @db.VarChar(50)
  photo        String?       @db.VarChar(50)
  password     String        @db.VarChar(255)
  status       UserStatus
  isBlacklist  Boolean       @map("is_blacklist")

  // relations
  ownedBooks   Book[]        @relation("OwnerBooks")
  loans        Loan[]        @relation("BorrowerLoans")
  reservations Reservation[] @relation("BorrowerReservations")

  @@map("users")
}

model Writer {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(50)
  books Book[]

  @@map("writer")
}

model Category {
  id       Int    @id @default(autoincrement())
  category String @db.VarChar(50)
  icon     String @db.VarChar(50)
  books    Book[]

  @@map("categories")
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(50)
  description String?  @db.Text
  language    String?  @db.VarChar(50)
  photo       String?  @db.Text
  isAvailable Boolean  @map("is_available")
  writerId    Int      @map("writer_id")
  categoryId  Int      @map("category_id")
  ownerId     Int      @map("owner_id")

  writer      Writer   @relation(fields: [writerId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])
  owner       User     @relation("OwnerBooks", fields: [ownerId], references: [id])

  loans       Loan[]
  reservations Reservation[]

  @@map("books")
}

model Loan {
  id          Int       @id @default(autoincrement())
  bookId      Int       @map("book_id")
  borrowerId  Int       @map("borrower_id")
  isDone      Boolean   @map("is_done")
  isLate      Boolean   @map("is_late")
  returnDate  DateTime? @map("return_date") @db.Date
  photo       String?   @db.Text
  isDamaged   Boolean   @map("is_damaged")

  book        Book      @relation(fields: [bookId], references: [id])
  borrower    User      @relation("BorrowerLoans", fields: [borrowerId], references: [id])

  @@map("loans")
}

model Reservation {
  id         Int               @id @default(autoincrement())
  bookId     Int               @map("book_id")
  borrowerId Int               @map("borrower_id")
  queue      Int
  status     ReservationStatus

  book       Book              @relation(fields: [bookId], references: [id])
  borrower   User              @relation("BorrowerReservations", fields: [borrowerId], references: [id])

  @@map("reservation")
}
